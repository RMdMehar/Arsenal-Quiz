<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EF0001</item>
        <item name="colorPrimaryDark">#DC0001</item>
        <item name="colorAccent">#9D8349</item>
        <item name="colorButtonNormal">#003175</item>
    </style>

    <style name="QuestionNumber">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Question">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-regular</item>
    </style>

    <style name="ChallengeHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="QuestionLayout">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="QuestionPartition">
        <item name="android:background">#9D8349</item>
    </style>

    <style name="ChallengePartition">
        <item name="android:background">#003175</item>
    </style>

    <style name="Options">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

</resources>
